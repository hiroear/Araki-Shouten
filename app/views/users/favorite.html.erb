<div class="container  d-flex justify-content-center mt-3">
  <div class="w-75">
    <h1>お気に入り</h1>

    <hr>

    <div class="row">
      <% @favorites.each do |favorite| %>
      <div class="col-md-6 mt-2">
        <div class="d-inline-flex">
          <%= link_to product_path(favorite), class: "w-25" do %>
            <!--product_path(favorite) :products#show(@user.likees(Product)) 商品詳細ページへ-->
            <% if favorite.image.attached? %>
              <%= image_tag favorite.image, class: "img-fuild w-100" %>
            <% else %>
              <%= image_tag "/images/dummy.png", class: "img-fuild w-100" %>
            <% end %>
          <% end %>
          <div class="container mt-3">
            <h5 class="w-100 samazon-favorite-item-text"><%= favorite.name %></h5>
            <h6 class="w-100samazon-favorite-item-text">￥<%= favorite.price %></h6>
          </div>
        </div>
      </div>
      <div class="col-md-3 d-flex align-items-center justify-content-end">
        <%= link_to product_path(favorite), class: "btn samazon-favorite-button text-favorite" do %>
          <!--product_path(favorite) :products#show(@user.likees(Product)) 商品詳細ページへ-->
          削除
        <% end %>
      </div>
      <div class="col-md-3 d-flex align-items-center justify-content-end">
        <%= form_with url: cart_users_path, local: true do |f| %>
          <%= f.hidden_field :product_id, value: favorite.id %>
          <%= f.hidden_field :price, value: favorite.price %>
          <%= f.hidden_field :quantity, value: 1 %>
          <%= f.submit "カートに入れる", class: "btn samazon-favorite-add-cart text-white w-100" %>
        <% end %>
      </div>
      <% end %>
    </div>

    <hr>

  </div>
</div>