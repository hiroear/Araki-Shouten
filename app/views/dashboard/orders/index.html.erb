<%# ダッシュボード / 受注一覧  dashboard_orders_path	  GET	  /dashboard/orders   dashboard/orders#index %>
<div class="w-75">
  <h1>受注一覧</h1>
  <div class="w-75">
    <%= form_with url: dashboard_orders_path, method: :get, local: true do |f| %>
      <div class="d-flex flex-inline form-group">
        <div class="d-flex align-items-center">注文番号</div>
        <%= f.text_field :code, class: "form-control ml-2 w-50", placeholder: "12345678" %>
      </div>
      <div class="d-flex flex-inline form-group">
        <div class="d-flex align-items-center">注文日</div>
        <%= f.date_field :from_date, value: @from_date, class: 'form-control ml-2 w-25' %>&nbsp;〜
        <%= f.date_field :to_date, value: @to_date, class: 'form-control ml-2 w-25' %>
      </div>
      <div class="d-flex flex-inline form-group">
        <div class="d-flex align-items-center">注文者名</div>
        <%= f.text_field :customer_name, value: @customer_name, class: "form-control ml-2 w-50", placeholder: "山田" %>
      </div>
      <%= f.submit '検索', class: "btn samazon-submit-button" %>
    <% end %>
  </div>
  
  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col" class="w-25">注文番号</th>
        <th scope="col">注文者名</th>
        <th scope="col">注文日時</th>
        <th scope="col">購入金額</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <%# @orders = ShoppingCartsテーブルの buy_flagが true もしくは(かつ) 注文番号検索結果が入っている %>
        <tr>
          <td class="align-middle" scope="row"><%= order.id %></td>
          <td class="align-middle"><%= User.find(order.user_id).name %></td>
          <td class="align-middle"><%= order.updated_at.to_datetime.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <%# .to_datetime : datetime型に変換 %>
          <td class="align-middle"><%= order.total.fractional / 100 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= paginate @orders %>
</div>