<%# ダッシュボード/カテゴリ管理一覧画面 %>
<div class="w-75">
  <%= form_with(model: @category, url: dashboard_categories_path, local: true) do |f| %>
  <%# dashboard_categories_path : POST  dashboard/categories#create %>
    <div class="form-group">
      <%= f.label :name, 'カテゴリ名' %>
      <%= f.text_field :name, class: "form-control", required: "" %>
    </div>
    
    <div class="form-group">
      <%= f.label :description, 'カテゴリの説明' %>
      <%= f.text_field :description, class: "form-control", required: "" %>
    </div>
    
    <div class="form-group">
      <%= f.label :major_category_id, '親カテゴリ' %>
      <%= f.select :major_category_id, @major_categories.map { |mc| [mc.name, mc.id] }, {include_blank: "選択してください"}, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.submit '＋新規作成', class: "btn submit-button" %>
    </div>
  <% end %>
  
  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col" class="w-25">ID</th>
        <th scope="col">カテゴリ</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <th scope="row"><%= category.id %></th>
          <td><%= category.name %></td>
          <td class="dashboard-edit-delete">
            <%= link_to "編集", edit_dashboard_category_path(category) %>
            <%# GET  dashboard/categories#edit %>
          </td>
          <td class="dashboard-edit-delete">
            <%= link_to "削除", dashboard_category_path(category), method: :delete, data: {confirm: "本当に削除しますか？"} %>
            <%# DELETE  dashboard/categories#destroy %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @categories %>
</div>