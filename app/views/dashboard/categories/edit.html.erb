<%# ダッシュボード/カテゴリ管理/カテゴリ編集画面 %>
<div class="w-50">
  <h1>カテゴリ編集</h1>
  
  <%= form_with model: @category, url: dashboard_category_path(@category), local: true do |f| %>
  <%# PUT  dashboard/categories#update %>
    <div class="form-inline my-4 row"> <%# .form-inline :高さを合わせ折り返させない %>
      <%= f.label :name, 'カテゴリ名', class: "col-4 d-flex justify-content-start" %>
      <%= f.text_field :name, class: "form-control col-8", required: "" %>
    </div>
    
    <div class="form-inline my-4 row">
      <%= f.label :description, 'カテゴリの説明', class: "col-4 d-flex justify-content-start" %>
      <%= f.text_field :description, class: "form-control col-8", required: "" %>
    </div>
    
    <div class="form-inline my-4 row">
      <%= f.label :major_category_name, '親カテゴリ', class: "col-4 d-flex justify-content-start" %>
      <%= f.select :major_category_id, @major_categories.map { |mc| [mc.name, mc.id] }, {}, class: "form-control col-8" %>
    </div>
    
    <%= f.submit '更新', class: "btn submit-button" %>
  <% end %>
  
  <div class="mt-4 sidebar-category-label"><%= link_to 'カテゴリ管理に戻る', dashboard_categories_path %></div>
</div>