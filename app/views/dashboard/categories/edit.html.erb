<!--ダッシュボード/カテゴリ管理/カテゴリ編集画面-->
<div class="w-50">
  <h1>カテゴリ情報更新</h1>
  
  <%= form_with model: @caregory, url: dashboard_category_path(@category), local: true, method: :put do |f| %>
  <!--PUT  dashboard/categories#update-->
    <div class="form-inline mt-4 mb-4 row"> <!--.form-inline :ラベル、フォームコントロールを1つの水平行に表示-->
      <%= f.label :name, 'カテゴリ名', class: "col-4 d-flex justify-content-start" %>
      <%= f.text_field :name, value: @category.name, class: "form-control col-8" %> <!--︎valueを付け足した-->
    </div>
    
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label :description, 'カテゴリの説明', class: "col-4 d-flex justify-content-start" %>
      <%= f.text_field :description,  value: @category.description, class: "form-control col-8" %>
    </div>
    
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label :major_category_name, 'カテゴリ', class: "col-4 d-flex justify-content-start" %>
      <%= f.text_field :major_category_name,  value: @category.major_category_name, class: "form-control col-8" %>
    </div>
    
    <%= f.submit '更新', class: "w-25 btn samazon-submit-button" %>
  <% end %>
  
  <div class="mt-4"><%= link_to 'カテゴリ管理に戻る', dashboard_categories_path %></div>
</div>