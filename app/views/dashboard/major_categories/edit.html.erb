<%# ダッシュボード/商品管理/親カテゴリ管理/編集 %>
<div class="w-50">
  <h1>親カテゴリ編集</h1>
  
  <%= form_with model: @major_category, url: dashboard_major_category_path(@major_category), local: true do |f| %>
  <%# PUT	 dashboard/major_categories#update %>
    <div class="form-inline my-4 row">
      <%= f.label :name, '親カテゴリ名', class: "col-4 d-flex justify-content-start" %>
      <%= f.text_field :name, class: "form-control col-8", required: "" %>
    </div>
    
    <div class="form-inline my-4 row">
      <%= f.label :description, '親カテゴリの説明', class: "col-4 d-flex justify-content-start" %>
      <%= f.text_field :description, class: "form-control col-8", required: "" %>
    </div>
    
    <%= f.submit '更新', class: "btn submit-button" %>
  <% end %>
  
  <div class="mt-4 sidebar-category-label"><%= link_to '親カテゴリ一覧に戻る',  dashboard_major_categories_path %></div>
</div>