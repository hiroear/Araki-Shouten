<!--dashboard専用のレイアウトを作成する為、layouts/application.htmlに代わる専用のlayoutsファイル(layouts/dashboard/dashboard.html)を作成-->
<!DOCTYPE html>
<html>
  <head>
    <title><%= ENV["APP_NAME"] %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/2d6f3622dc.js" crossorigin="anonymous"></script>
    <!--<script src="https://kit.fontawesome.com/8aeca36c69.js" crossorigin="anonymous"></script>-->
  </head>
  
  <body>
    <%= render partial: 'layouts/dashboard/header' %>
    <div class="row">
      <div class="col-3 mt-3"><!--サイドバー-->
        <%= render partial: 'layouts/dashboard/sidebar' %>
      </div>
      
      <div class="col">
        <main class="py-4 mb-5">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>

